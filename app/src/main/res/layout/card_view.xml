<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="100dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#FFF"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="?selectableItemBackground" >

        <TextView
            android:id="@+id/txt_pizzaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/imageView"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Pizza Name" />

        <TextView
            android:id="@+id/txt_pizzaDes"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_pizzaName"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txt_pizzaName"
            android:layout_marginEnd="13dp"
            android:layout_toRightOf="@id/imageView"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Pizza Description" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="13dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_background" />
    </RelativeLayout>

</android.support.v7.widget.CardView>